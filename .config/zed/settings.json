{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // INTERFACE
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "ui_font_size": 16,
  "vim_mode": false,
  "relative_line_numbers": true,
  "tabs": {
    "git_status": true
  },

  // EDITOR
  "buffer_font_size": 14,

  // GIT
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    },
    "hunk_style": "staged_hollow"
  },

  // BEHAVIOR
  "autosave": "on_window_change",
  "format_on_save": "on",

  // FOR FILE TYPES
  "languages": {
    "Python": {
      "code_actions_on_format": {
        "source.organizeImports": false
      }
    }
  },

  // EXTENSIONS
  "auto_install_extensions": {
    // "html": true,
    // "dockerfile": true,
    // "docker-compose": false
  },

  "files": {
    "insert_final_newline": false,
    "exclude": [
      "**/.classpath",
      "**/.coverage*",
      "**/.factorypath",
      "**/.mypy_cache",
      "**/.project",
      "**/.pytest_cache",
      "**/__pycache__",
      "**/.ipynb_checkpoints",
      "**/.ruff_cache"
    ]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ]
}
